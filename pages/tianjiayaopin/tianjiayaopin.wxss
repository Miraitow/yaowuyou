.box{
  width: 90%;
  height: 400rpx;
  border-radius: 25rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  box-shadow:0 0 5px rgb(214, 209, 209);
}
.title{
  padding-left: 20rpx;
  height: 70rpx;
  position: relative;
  border-bottom: 2rpx solid #eee;
}
.title image{
  padding: 7rpx;
  width: 60rpx;
  height: 60rpx;
}
.p1{
  position: absolute;
  top: 50%;
  font-weight: 700;
  transform: translateY(-50%);
}

.middle{
  position: relative;
  width: 100%;
  height: 200rpx;
}
.foot{
  width: 100%;
  height: 100rpx;
  position: relative;
}

.tianjia{
  width: 200rpx;
  height: 70rpx;
  background-color: #00c399;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  border-radius: 20rpx;
}
.middle-m{
  width: 55%;
  height: 200rpx;
  background-color:#fff;
  position: absolute;
  top: -100%;
  left: 50%;
  transform: translateX(-50%);
  position: relative;
  font-size: 26rpx;
}
.saoma{
  width: 300rpx;
  height: 45rpx;
  background-color: #eee;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 15rpx;
  text-align: center;
}
.num{
  width: 140rpx;
  height: 45rpx;
  position: absolute;
  background-color: #eee;
  left: 9%;
  top: 50%;
  text-align: center;
}
.xuanze{
  width: 140rpx;
  height: 45rpx;
  position: absolute;
  background-color: #eee;
  right:  9%;
  top: 50%;
  text-align: center;
}

.van-uploader__upload{
  width: 100rpx!important;
  height: 100rpx!important;
}
.middle-l{
  width: 20%;
  height: 200rpx;
  padding-top: 20rpx;
}
.shangchuan{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-left: 20rpx;
  margin-top: 30rpx;
}
.middle-r{
  width: 20%;
  height: 200rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.saom image{
  margin-top: 40rpx;
  width: 100rpx;
  height: 100rpx;
}