<view>
  <!-- <van-toast id="van-toast" /> -->
<form bindsubmit="submitNewStuInfo">
<van-cell-group >
  <view bindtap="showPopup1" class="head">
   <van-field
   name="time"
    label="服药时间"
    title-width="8em"
    placeholder="选择时间"
    value="{{time}}"
    required
    readonly
  />
  </view>
 <view class="head">
  <van-field
    name="name"
    label="服药人员"
    maxlength="11"
    title-width="8em"
    placeholder="如：101房王先生"
    required
    clearable
  />
 </view>
  <view class="head">
    <van-field
    name="medicine"
    label="服用药品"
    maxlength="11"
    title-width="8em"
    placeholder="请输入药品名称"
    required
    clearable
  />
  </view>
  <view bindtap="showPopup2" class="head">
   <van-field
   name="num"
    label="服用剂量"
    title-width="8em"
    placeholder="选择剂量"
    value="{{num}}"
    required
    readonly
  />
  </view>
 <view class="head">
  <van-cell  title="提醒设置" icon="setting-o" />
 </view>
 <view bindtap="showPopup4" >
   <van-field
   name="count"
    label="重复"
    title-width="8em"
    placeholder="重复次数"
    value="{{count}}"
    required
    readonly
  /> 
 </view>
  <view bindtap="showPopup3" >
   <van-field
   name="way"
    label="提醒方式"
    title-width="8em"
    placeholder="选择提醒方式"
    value="{{way}}"
    required
    readonly
  />
  </view>
    <van-field
    name="tip"
    label="备注"
    maxlength="11"
    title-width="8em"
    placeholder="如：不能空腹服用"
    clearable
  />
</van-cell-group>
<van-popup show="{{ show1 }}" bind:close="onClose1"  position="bottom"
  custom-style="height: 50%">
    <van-picker title="选择时间" show-toolbar columns="{{ columns1 }}"  bind:cancel="onClose1"
  bind:confirm="onConfirm1"/>
</van-popup>
<van-popup show="{{ show2 }}" bind:close="onClose2"  position="bottom"
  custom-style="height: 50%">
    <van-picker title="选择剂量" show-toolbar columns="{{ columns2 }}"  bind:cancel="onClose2"
  bind:confirm="onConfirm2"/>
</van-popup>
<van-popup show="{{ show3 }}" bind:close="onClose3"  position="bottom"
  custom-style="height: 50%">
    <van-picker title="提醒方式" show-toolbar columns="{{ columns3 }}"  bind:cancel="onClose3"
  bind:confirm="onConfirm3"/>
</van-popup>
<van-popup show="{{ show4 }}" bind:close="onClose4"  position="bottom"
  custom-style="height: 50%">
    <van-picker title="重复次数" show-toolbar columns="{{ columns4 }}"  bind:cancel="onClose4"
  bind:confirm="onConfirm4"/>
</van-popup>
 <button  class="button" disabled="{{disabled}}" form-type="submit">保存
 </button>
</form>
</view>