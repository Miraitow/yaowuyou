/* pages/search/index.wxss */
.search{
  display: flex;
  margin: 10rpx;
}
.searchInput{
  flex: 5;
  border: 1px solid #00c399;
  height: 60rpx ;
  border-radius: 30rpx;
  padding-left: 20rpx;
}
.button{
 flex: 1;
 background: linear-gradient(#94dbcc, #00c399) ;
 color: white;
 border-radius: 30rpx;
 margin-left: 20rpx;
 height: 60rpx;
 display: flex;
 justify-content: center;
 align-items: center;
}
.button:active{
  background: linear-gradient( #00c399,#94dbcc) ;
}
.link {
  width: 100%;
  height: 100%;
  display: flex;
}

.left {
  width: 430rpx;
  height: 100vh;
  text-align: center;
  color: #000;
}

.left .item {
  line-height: 50px;
  font-size: 30rpx;
}

.active {
  color: #00c399;
}

.right {
  height: 100vh;
  background-color: #fff;
  padding: 0 30rpx;
}

.right-cont {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #ccc;
}

.title {
  text-align: center;
  font-size: 36rpx;
  color: rgb(2, 2, 2);
  padding-top: 60rpx;
  padding-bottom: 20rpx;
}

.content {
  padding: 0 5rpx 0 20rpx;
}

.list-item{
  font-size: 32rpx;
  color: #333;
  line-height: 50rpx;
}
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.split {
  text-align: center;
  margin-top: 10px;
  font-size: 25rpx;
}