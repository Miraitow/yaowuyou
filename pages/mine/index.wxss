/* 背景图片 */
.img image{
  width: 100%;
  height: 130rpx;
}

.head{
  width: 90%;
  height: 130rpx;
  border-radius: 5rpx;
  position: absolute;
  left: 50%;
  transform:  translateX(-50%);
  top: 8%;
  background-color: #fff;
  box-shadow:0 0 5px rgb(214, 209, 209);
}
.touxiang {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 16rpx;
  text-align: center;
  overflow: hidden;
}
.touxiang image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.van-uploader__upload{
  background-color: #61d8bf !important;
width: 100rpx!important;
height: 100rpx!important;
border-radius: 50%!important;
}
.title{
  position: absolute;
  top: 12%;
  left: 20%;
  font-size: 30rpx;
}
.icon image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  left: 20%;
}
.icon .tell{
  width: 200rpx;
  height: 30rpx;
  position: absolute;
  top: 52%;
  left: 20%;
  font-size: 24rpx;
  color:#797979;
}
.arrow image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  transform:  translateY(-50%);
  right: 5%;
}
