/* pages/jiarenxinxi/jiarenxinxi.wxss */
.card{
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  margin-bottom: 40rpx;
  position: relative;
}
.top{
  width: 100%;
  height: 330rpx;
}
.top .top_l{
  width: 36%;
  height: 330rpx;
}
.top .top_l image{
  width: 200rpx;
  height: 200rpx;
  margin: 35rpx;
}
.top .top_r{
  width: 64%;
  height: 320rpx;
  position: absolute;
  top: 10rpx;
  right: 0;
}
.title{
  display: flex;
}
.title .name{
  width: 180rpx;
  height: 60rpx;
  font-size: 40rpx;
}
.title .age{
  width: 100rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}
.top_r .msg{
  font-size: 28rpx;
  margin-top: 3rpx;
}
.bottom{
  height: 250rpx;
  /* background-color: pink; */
}
.bottom .content{
  width: 700rpx;
  height: 220rpx;
  /* background-color: pink; */
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  transform:  translateX(-50%);
  border: #ccc solid 3rpx;
}
.shuoming{
  display: block;
  font-size: 30rpx;
  margin: 10rpx;
}
.detail{
  font-size: 28rpx;
  margin-left: 50rpx;
}